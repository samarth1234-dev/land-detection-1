# API
API_PORT=4000
JWT_SECRET=replace-me-with-a-strong-secret
TOKEN_EXPIRY=7d
CORS_ORIGIN=http://127.0.0.1:3000,http://localhost:3000

# Account signup
EMPLOYEE_SIGNUP_CODE=gov-2026

# Persistence
# auto: use PostgreSQL when available, otherwise in-memory fallback (best for quick demos)
# postgresql: require PostgreSQL (no fallback)
# memory: always in-memory (no local DB setup needed)
PERSISTENCE_MODE=auto
ALLOW_MEMORY_FALLBACK=true

# PostgreSQL (used when PERSISTENCE_MODE=postgresql, or when auto finds PostgreSQL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=root_land
DB_USER=postgres
DB_PASSWORD=postgres
# For Supabase, use pooler URL from Project Settings -> Database -> Connection string
# SUPABASE_DB_URL=postgresql://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres?sslmode=require
# DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/root_land
# DATABASE_SSL=false

# Remote sensing providers (defaults are public endpoints)
# EARTH_SEARCH_BASE_URL=https://earth-search.aws.element84.com/v1
